<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.virtuaalpet.virtualpet.TutorialScreenController">

    <children>
        <ImageView fx:id="MyBackgroundView" fitHeight="500.0" fitWidth="800.0">
            <image>
                <Image url="@Pic/TutorialBG1.png" />
            </image>
        </ImageView>

        <!-- Next Button -->
        <Button fx:id="nextButton" layoutX="580.0" layoutY="400.0" onAction="#handleNextButton" prefHeight="107.0" prefWidth="230.0" style="-fx-background-color: transparent;                        -fx-background-image: url('@Pic/NextButton1preview.png');                        -fx-background-size: cover;">
        </Button>

        <ImageView fitHeight="131.0" fitWidth="136.0" layoutX="654.0" layoutY="400.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Pic/NextButton1.png" />
            </image>
        </ImageView>

        <ImageView fitHeight="70.0" fitWidth="67.0" layoutX="16.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@Pic/MenuButton.png" />
            </image>
        </ImageView>

        <!-- Updated Text Label -->
        <Label fx:id="tutorialText" layoutX="352.0" layoutY="250.0" prefHeight="184.0" prefWidth="395.0" style="-fx-background-color: transparent;                       -fx-font-family: 'Press Start 2P';                       -fx-font-size: 20px;                       -fx-font-weight: bold;                       -fx-text-fill: white;                       -fx-effect: dropshadow(gaussian, black, 7, 0.8, 2, 2);" text="HI THERE, SINCE YOU HAVE CHOSEN YOUR PET, YOU ARE RESPONSIBLE TO TAKE CARE OF THIS PET, FOR THE REST OF YOUR LIFE" wrapText="true">
        </Label>

        <!-- Arrow Image (Initially Hidden) -->
        <ImageView fx:id="arrowImage" fitHeight="75.0" fitWidth="99.0" layoutX="560.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" visible="false">
            <image>
                <Image url="@Pic/Arrows.png" />
            </image>
        </ImageView>

    </children>
</AnchorPane>
